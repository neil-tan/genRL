<!-- MJCF representation of cartpole_robot.xml -->
<!-- Only elements meant for inclusion should remain -->

<!-- Removed <mujoco>, <compiler>, <option>, <visual>, <asset> wrapper tags -->

<worldbody>
    <!-- The URDF 'fixed' joint created a body 'slideBar' relative to world -->
    <!-- Adjusting structure for MJCF inclusion: -->
    <!-- slideBar body becomes the root body included -->
    <body name="slideBar" pos="0 0 1"> <!-- Position based on original fixed joint -->
      <!-- Removed freejoint, as it will be connected via the parent file -->
      <geom name="slideBar" type="box" size="15 0.025 0.025" rgba="0 0.8 0.8 1"/>
      <inertial mass="0.1" pos="0 0 0"/> <!-- Simplified inertial -->
      <body name="cart" pos="0 0 0">
        <inertial mass="5" pos="0 0 0"/>
        <joint name="slider_to_cart" type="slide" axis="1 0 0" limited="true" range="-15 15"/>
        <geom name="cart" type="box" size="0.25 0.25 0.1" rgba="0 0 0.8 1"/>
        <body name="pole" pos="0 0 0">
          <inertial mass="0.8" pos="0 0 0.5"/>
          <joint name="cart_to_pole" type="hinge" axis="0 1 0" pos="0 0 0"/>
          <geom name="pole" type="box" size="0.025 0.025 0.5" pos="0 0 0.5" rgba="1 1 1 1"/>
        </body>
      </body>
    </body>
</worldbody>

