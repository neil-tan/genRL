<mujoco model="cartpole">
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.01"/>

  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1="0 0 0" rgb2=".8 .8 .8" width="100" height="100"/>
    <material name="MatPlane" reflectance="0.5" texture="texplane" texuniform="true" texrepeat="10 10"/>
  </asset>

  <default>
    <joint armature="0" damping="0" limited="true"/>
    <geom contype="0" conaffinity="0" condim="1" friction="0.7 0.1 0.1" density="5" margin="0.001"/>
  </default>

  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane"/>
    
    <body name="cart" pos="0 0 0">
      <joint axis="1 0 0" damping="0.0" limited="true" name="slider" pos="0 0 0" range="-2.4 2.4" type="slide"/>
      <geom name="cart" pos="0 0 0" size="0.1 0.05" type="capsule" density="400"/>
      <body name="pole" pos="0 0 0">
        <joint axis="0 1 0" damping="0.0" name="hinge" pos="0 0 0" range="-0.2094 0.2094" type="hinge"/> <!-- +/- 12 degrees -->
        <geom fromto="0 0 0 0 0 0.5" name="pole" size="0.025" type="capsule" density="100"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor ctrllimited="true" ctrlrange="-100.0 100.0" gear="100" joint="slider" name="slide"/>
  </actuator>
</mujoco> 